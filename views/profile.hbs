<div>
    <img src="{{profilePicture}}" alt="Profile Picture" style="height:75px; width:75px;">

    <br>

    {{#isEmpty profileName}}
    {{else}}
        <b>{{profileName}}</b>
    {{/isEmpty}}

    <p>@{{profileUsername}}</p>

    {{#isEmpty profileDescription}}
    {{else}}
        <p>{{profileDescription}}</p>
    {{/isEmpty}}

    <form action="/editprofile" method="get">
        <button type="submit">Edit Profile</button>
    </form>
</div>

<div>
    {{#isEmpty posts}}
        <p>It's looking a little quiet here. Why not post?</p>
    {{else}}
        {{#each posts}}
            {{> largePost}}
        {{/each}}
    {{/isEmpty}}
</div>